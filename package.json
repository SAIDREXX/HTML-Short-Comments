{
  "name": "html-short-comment",
  "displayName": "HTML Short Comment",
  "icon": "icon.png",
  "description": "A Visual Studio Code Extension to Provide Short Comments for HTML, SVG, XML and Astro Files",
  "version": "0.0.1",
  "keywords": [
    "comment",
    "astro",
    "html",
    "svg",
    "xml"
  ],
  "publisher": "SAIDREXXX",
  "author": {
    "name": "SAIDREXXX"
  },
  "license": "MIT",
  "bugs": "https://github.com/SAIDREXX/HTML-Short-Comments/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/SAIDREXX/HTML-Short-Comments.git"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:astro",
    "onLanguage:html",
    "onLanguage:svg",
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "HTML Short Comment",
      "properties": {
        "htmlshortcomment.defineCharacterToReplace": {
          "type": "string",
          "default": "//",
          "description": "Characters to be used to identify the replacement of the text by a comment"
        }
      }
    }
  },
  "scripts": {
    "package": "npm run compile && vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/vsce": "^2.25.0"
  }
}